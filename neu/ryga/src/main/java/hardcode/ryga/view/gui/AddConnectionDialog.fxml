<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox spacing="10.0" style="-fx-background-color: peru;">
         <children>
            <Label fx:id="lblWord" text="lblWord" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <ImageView fx:id="imgViewLanguage" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <VBox spacing="10.0">
         <children>
            <Label text="Connection:" />
            <HBox spacing="10.0">
               <children>
                  <ComboBox fx:id="combo" />
                  <Button fx:id="btnAddConnection" mnemonicParsing="false" text="+" />
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <VBox fx:id="vboxConnectTo" spacing="10.0" style="-fx-background-color: burlywood;">
         <children>
            <HBox>
               <children>
                  <Label fx:id="lblConnectToWord">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <ImageView fx:id="imgViewConnectToLanguage" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </HBox>
            <Label fx:id="lblConnecToNotes" wrapText="true" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <VBox fx:id="queryListContainer" spacing="10.0" style="-fx-background-color: lightblue;">
         <children>
            <Label text="Connect to vocable:" />
            <TextField fx:id="txtWord" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <HBox spacing="10.0" style="-fx-background-color: lightblue;">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnConnect" mnemonicParsing="false" text="Connect" />
         </children>
      </HBox>
      <Region VBox.vgrow="ALWAYS" />
      <HBox spacing="10.0">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnCancel" mnemonicParsing="false" text="Cancel" />
            <Button fx:id="btnOk" mnemonicParsing="false" text="Ok" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
